@model Bumbo.Web.Models.Users.DetailsViewModel.EditUserViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                Medewerker @Model.FirstName
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MiddleName" class="control-label"></label>
                        <input asp-for="MiddleName" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ZipCode" class="control-label"></label>
                        <input asp-for="ZipCode" class="form-control" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HouseNumber" class="control-label"></label>
                        <input asp-for="HouseNumber" class="form-control" />
                        <span asp-validation-for="HouseNumber" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Id" />


                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-6">
        <div class="col-12 pb-3">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex">
                        <div class="p-2">Huidige Contract</div>
                        <div class="ml-auto p-2"><a asp-action="Edit" asp-route-id="@Model.Id">Toevoegen</a></div>
                    </div>

                </div>
                <div class="card-body">
                    @foreach (var contract in Model.Contracts)
                    {
                        <dl class="row">
                            <dt class="col-sm-5">
                                Startdatum
                            </dt>
                            <dd class="col-sm-7">
                                @contract.StartDate.ToShortDateString()
                            </dd>

                            <dt class="col-sm-5">
                                CAO
                            </dt>
                            <dd class="col-sm-7">
                                @contract.Scale
                            </dd>

                            <dt class="col-sm-5">
                                ContractType
                            </dt>
                            <dd class="col-sm-7">
                                @contract.Function
                            </dd>
                        </dl>
                    }
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex">
                        <div class="p-2">Afdelingen</div>

                    </div>

                </div>
                <div class="card-body">
                    <form asp-action="EditDepartment" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="checkboxContainer">
                            @*@foreach (var item in Enum.GetValues(typeof(Bumbo.Data.Models.Enums.Department)))
                            {
                                <label class="checkbox">
                                    <input type="checkbox" name="Department" class="appliesOnField" id="@item" value="@item" /> @item
                                </label>
                            }*@

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            Filiaal
                                        </th>
                                        <th>
                                            Afdeling
                                        </th>
                                        <th></th>


                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.UserBranches)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Branch.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Department)
                                        </td>

                                        <td>

                                            <a asp-action="DeleteBranchUser"  asp-route-branchId="@item.Branch.Id" asp-route-id="@item.UserId">Delete</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                            <div class="form-group">
                                <label asp-for="UserBranches" class="control-label"></label>
                                <select name="Department" asp-items="Html.GetEnumSelectList<Bumbo.Data.Models.Enums.Department>()" class="form-control">
                                    <option selected="selected" value="">Selecteer Afdeling</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="Branches" class="control-label"></label>
                                <select name="Branch" asp-items="Model.Branches" class="form-control">
                                    <option selected="selected" value="">Selecteer filiaal</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary" type="submit">Opslaan</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    </div>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
