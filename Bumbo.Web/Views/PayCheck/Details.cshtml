@model Bumbo.Web.Models.Paycheck.PaycheckViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Week nr
                </th>
                <th>
                    Extra hours
                </th>
                @for (int i = 0; i < Model.WeekNumbers.Count; i++)
                {
                    <th>
                        @Model.WeekNumbers[i]
                    </th>
                }
                <th>
                    Maandag..
                </th>
                <th>
                    Total worked hours
                </th>
            </tr>
        </thead>
        <tbody>

         @for (int i = 0; i < Model.WeekNumbers.Count; i++)
        {
            <tr>
                <td>
                    @Model.WeekNumbers[i]
                </td>
                <td>
                    0
                </td>
                <td>
                    @Model.SelectedUser.Shifts.First().Date
                </td>
                <td>
                    10.60
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index" asp-route-branchId="@Model.Branch.Id" asp-route-year="@Model.Year" asp-route-monthNr="@Model.MonthNr">Index</a> |
    <a asp-action="Index">Back to List</a>
</div>
