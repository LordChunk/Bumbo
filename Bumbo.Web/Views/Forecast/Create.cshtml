@using Bumbo.Web.Models.Forecast
@model Bumbo.Web.Models.Forecast.StockclerkViewModel

@{
    ViewData["Title"] = "Create";
}

@section Styles
{
    <style type="text/css">
        #forecast-create-container {
            display: flex;
        }
        #forecast-create-container > * {
            padding: 0 1.5em;
        }
        .forecast-submit {
            display: flex;
            justify-content: flex-end;
        }
        .forecast-submit > * {
            margin-left: 2em;
        }
    </style>
}

<h1>Create</h1>

<h4>Prognose vanaf @Model.FirstDayOfWeek</h4>
<hr/>
<form asp-action="Create">
    <div id="forecast-create-container">
        <div class="row">
            <div class="form-group">
                <strong>Dag</strong>
            </div>
            <div class="form-group">
                <strong>Aantal verwachte coli</strong>
            </div>
            <div class="form-group">
                <strong>Aantal meters te spiegelen</strong>
            </div>
        </div>
        @for (var i = 0; i < @Model.DaysInForecast; i++)
        {
            <div class="row">
                <div>
                    <h5>@Model.FirstDayOfWeek.AddDays(i).DayOfWeek</h5>
                </div>
                <div class="form-group">
                    @* <label asp-for="ExpectedNumberOfColi" class="control-label">Aantal coli verwacht op @day</label> *@
                    <input asp-for="@Model.ForecastInputs[i].ExpectedNumberOfColi" class="form-control"/>
                    <span asp-validation-for="@Model.ForecastInputs[i].ExpectedNumberOfColi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @* <label asp-for="MetersOfShelves" class="control-label">Meters die gespiegeld moeten worden op @day</label> *@
                    <input asp-for="@Model.ForecastInputs[i].MetersOfShelves" class="form-control"/>
                    <span asp-validation-for="@Model.ForecastInputs[i].MetersOfShelves" class="text-danger"></span>
                </div>
            </div>
        }
    </div>
    <div class="form-group forecast-submit">
        <a asp-action="Index" asp-route-branchId="@Model.BranchId">Back to List</a>
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}