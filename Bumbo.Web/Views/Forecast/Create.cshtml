@using Bumbo.Data.Models.Enums
@model Bumbo.Data.Models.Forecast

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Forecast</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
